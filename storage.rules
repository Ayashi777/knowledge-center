rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper to check if user is authenticated
    function isAuth() {
      return request.auth != null;
    }

    // Helper to check if user is admin via Firestore
    function isAdmin() {
      return isAuth() && 
        firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Thumbnails: publicly readable for UI cards, write only by admin
    match /thumbnails/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Documents files: only for authenticated users, write only for admin
    match /documents/{allPaths=**} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }

    // Default: allow read for auth users, write only for admin
    match /{allPaths=**} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }
  }
}
