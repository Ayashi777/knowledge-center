rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    function isAdmin() {
      let user = firestore.get(/databases/(default)/documents/users/$(request.auth.uid));
      return request.auth != null && user.data.role == 'admin';
    }

    match /{allPaths=**} {
      // Дозволяємо читання ТА перегляд списку файлів усім (навіть гостям)
      // Це потрібно, щоб гість міг побачити список файлів у документі
      allow read, list: if true; 
      
      // Запис лише для адмінів
      allow write: if isAdmin();
    }
  }
}
