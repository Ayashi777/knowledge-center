rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper to check if user is authenticated
    function isAuth() {
      return request.auth != null;
    }

    // Helper to check if user is admin via Firestore
    function isAdmin() {
      return isAuth() && 
        firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Rules for public assets (favicons, public images etc)
    match /public/{allPaths=**} {
      allow read: if true;
    }

    // Rules for documents and images inside documents
    match /documents/{docId}/{allPaths=**} {
      // Allow read only for authenticated users.
      // In the future, this can be matched with document category permissions.
      allow read, list: if isAuth();
      
      // Allow write only for admins
      allow write: if isAdmin();
    }

    // Default: deny everything else
    match /{allPaths=**} {
      allow read, write: if isAdmin();
    }
  }
}
